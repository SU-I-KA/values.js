{
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "npm run watch",
    "watch": "tarima watch src",
    "_build": "tarima -fdV",
    "build": "tarima -fdV && npm run min-css && npm run min-js",
    "min-css": "uglify -s build/css/00.css -o build/css/00.css -c",
    "min-js": "uglify -s build/js/00.js -o build/js/00.js"
  },
  "author": "Noel Delgado <auhcsei@gmail.com> (http://pixelia.me)",
  "license": "MIT",
  "devDependencies": {
    "postcss": "^7.0.30",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "rollup": "^1.31.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "tarima": "^4.6.3"
  },
  "tarima": {
    "bundle": [
      "**/_entries/**"
    ],
    "filter": [
      "**/_entries/**"
    ],
    "public": "./",
    "from": [
      "src"
    ],
    "output": "build",
    "watching": [
      "index.html"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "rename": "**/_entries/**:{filepath/1/_entries}/{filename}.{extname}",
    "_rename": [
      "**/_entries/**:{basedir/1/bundles/}/{fname}"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "post"
      },
      "rollup": {
        "format": "iife",
        "plugins": [
          "rollup-plugin-buble",
          "rollup-plugin-commonjs",
          "rollup-plugin-node-resolve"
        ],
        "rollup-plugin-node-resolve": {
          "mainFields": [
            "module",
            "jsnext:main",
            "browser"
          ]
        }
      },
      "postcss": {
        "plugins": [
          "postcss-import",
          "postcss-cssnext"
        ],
        "postcss-cssnext": {
          "browsers": [
            "last 1 version"
          ],
          "features": {
            "customProperties": false,
            "calc": false
          }
        }
      }
    }
  }
}
